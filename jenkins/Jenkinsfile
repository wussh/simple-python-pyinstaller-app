pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                // Your SCM checkout steps here
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                // Your build steps here
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                // Your test steps here
                sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            }
        }

        stage('Deliver') {
            agent {
                docker {
                    image 'cdrx/pyinstaller-linux:python2'
                    args '--entrypoint=""' // Adding the --entrypoint argument
                }
            }
            steps {
                // Your deliver steps here
                // This stage will run inside the cdrx/pyinstaller-linux:python2 container
                // with an empty entry point.
            }
        }
    }
}
